{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "module": "NodeNext",
    "typeRoots": [
      "./node_modules/@types",
      "./src/common/infrastructure/typings"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "tests/*.ts",
    "_site"
  ]
}
